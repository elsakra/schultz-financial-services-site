---
interface Props {
  quote: string;
  author: string;
  role?: string;
  image?: string;
  rating?: number;
}

const { quote, author, role, image, rating } = Astro.props;
---

<div class="bg-white rounded-2xl p-8 shadow-sm">
  <!-- Rating Stars -->
  {rating && (
    <div class="flex gap-1 mb-4">
      {Array.from({ length: 5 }).map((_, i) => (
        <svg 
          class:list={[
            "w-5 h-5",
            i < rating ? "text-warm-400" : "text-cream-300"
          ]}
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      ))}
    </div>
  )}
  
  <!-- Quote -->
  <blockquote class="text-earth-700 leading-relaxed italic">
    "{quote}"
  </blockquote>
  
  <!-- Author -->
  <div class="mt-6 flex items-center gap-4">
    {image ? (
      <img 
        src={image} 
        alt={author}
        class="w-12 h-12 rounded-full object-cover"
      />
    ) : (
      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-sage-400 to-sage-600 flex items-center justify-center text-white font-semibold text-lg">
        {author.split(' ').map(n => n[0]).join('').slice(0, 2)}
      </div>
    )}
    <div>
      <p class="font-semibold text-sage-900">{author}</p>
      {role && <p class="text-sm text-earth-500">{role}</p>}
    </div>
  </div>
</div>
