---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const team = await getCollection('team');
const sortedTeam = team.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections, company, socialProof } = siteData;
---

<BaseLayout title="About Us">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-white">
          {sections.about?.headline || "About Us"}
        </h1>
        <p class="mt-6 text-xl text-slate-300 leading-relaxed">
          {company.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Stats -->
  {socialProof?.stats && (
    <section class="py-12 bg-white border-b border-slate-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {socialProof.stats.map((stat) => (
            <div class="text-center">
              <p class="font-display text-4xl font-bold text-crimson-600">{stat.value}</p>
              <p class="mt-1 text-slate-600">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Story Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <span class="text-crimson-600 font-semibold text-sm uppercase tracking-wide">Our Story</span>
          <h2 class="mt-2 font-display text-3xl sm:text-4xl font-bold text-charcoal-900">
            A different kind of firm
          </h2>
          <div class="mt-6 prose prose-lg">
            <p class="text-slate-600 leading-relaxed">
              {sections.about?.content}
            </p>
          </div>
          <div class="mt-8">
            <Button href="/services" style="outline">
              Our Services
            </Button>
          </div>
        </div>
        {sections.about?.image && (
          <div class="relative">
            <div class="aspect-[4/3] rounded-xl overflow-hidden">
              <img 
                src={sections.about.image} 
                alt="Our story"
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Values Section -->
  {sections.about?.values && (
    <section class="py-16 lg:py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
            Our Values
          </h2>
          <p class="mt-4 text-lg text-slate-600">
            The principles that guide everything we do
          </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
          {sections.about.values.map((value, index) => (
            <div class="bg-white rounded-xl p-8 border border-slate-200">
              <div class="w-12 h-12 bg-crimson-600 rounded-lg flex items-center justify-center mb-6">
                <span class="font-display text-xl font-bold text-white">
                  {String(index + 1).padStart(2, '0')}
                </span>
              </div>
              <h3 class="font-display text-xl font-bold text-charcoal-900">
                {value.title}
              </h3>
              <p class="mt-3 text-slate-600 leading-relaxed">
                {value.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Team Section -->
  {sortedTeam.length > 0 && (
    <section id="team" class="py-16 lg:py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
            {sections.team?.headline || "Leadership"}
          </h2>
          {sections.team?.description && (
            <p class="mt-4 text-lg text-slate-600 max-w-3xl mx-auto">
              {sections.team.description}
            </p>
          )}
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedTeam.map(async (member) => {
            const { Content } = await member.render();
            return (
              <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
                {member.data.image ? (
                  <div class="aspect-[4/3] overflow-hidden bg-slate-100">
                    <img 
                      src={member.data.image} 
                      alt={member.data.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                ) : (
                  <div class="aspect-[4/3] overflow-hidden bg-gradient-to-br from-charcoal-700 to-navy-800 flex items-center justify-center">
                    <span class="text-4xl font-bold text-white/50">
                      {member.data.name.split(' ').map(n => n[0]).join('')}
                    </span>
                  </div>
                )}
                <div class="p-6">
                  <h3 class="font-display text-xl font-bold text-charcoal-900">
                    {member.data.name}
                  </h3>
                  <p class="mt-1 text-crimson-600 font-medium">{member.data.role || member.data.title}</p>
                  <div class="mt-4 text-slate-600 text-sm leading-relaxed prose prose-sm">
                    <Content />
                  </div>
                  <div class="mt-4 flex items-center gap-3">
                    {member.data.email && (
                      <a 
                        href={`mailto:${member.data.email}`}
                        class="text-slate-400 hover:text-charcoal-900 transition-colors"
                      >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      </a>
                    )}
                    {member.data.linkedin && (
                      <a 
                        href={member.data.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-slate-400 hover:text-charcoal-900 transition-colors"
                      >
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to get started?
      </h2>
      <p class="mt-4 text-xl text-slate-300">
        Connect with our team to discuss how we can support your business.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="primary" size="lg">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
