---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const insights = await getCollection('insights');
  return insights.map((insight) => ({
    params: { slug: insight.slug },
    props: { insight },
  }));
}

const { insight } = Astro.props;
const { Content } = await insight.render();

// Get related insights (same category or recent)
const allInsights = await getCollection('insights');
const relatedInsights = allInsights
  .filter(i => i.slug !== insight.slug)
  .filter(i => i.data.category === insight.data.category || !insight.data.category)
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 3);
---

<BaseLayout title={insight.data.title} description={insight.data.excerpt}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-slate-400 mb-8">
        <a href="/insights" class="hover:text-white transition-colors">Insights</a>
        {insight.data.category && (
          <>
            <span>/</span>
            <a 
              href={`/insights?category=${insight.data.category}`}
              class="hover:text-white transition-colors"
            >
              {insight.data.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
            </a>
          </>
        )}
      </nav>
      
      <div class="flex flex-wrap items-center gap-4 mb-6">
        {insight.data.category && (
          <span class="inline-block px-3 py-1 text-xs font-medium text-crimson-400 bg-crimson-950/50 rounded-full">
            {insight.data.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
          </span>
        )}
        {insight.data.readTime && (
          <span class="text-sm text-slate-400">{insight.data.readTime}</span>
        )}
      </div>
      
      <h1 class="font-display text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
        {insight.data.title}
      </h1>
      
      <div class="mt-8 flex items-center gap-6">
        {insight.data.author && (
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-700 rounded-full flex items-center justify-center">
              <span class="text-sm font-medium text-white">
                {insight.data.author.split(' ').map(n => n[0]).join('')}
              </span>
            </div>
            <div>
              <p class="text-white font-medium">{insight.data.author}</p>
              {insight.data.authorRole && (
                <p class="text-sm text-slate-400">{insight.data.authorRole}</p>
              )}
            </div>
          </div>
        )}
        <div class="text-sm text-slate-400">
          {new Date(insight.data.publishedAt).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Image -->
  {insight.data.image && (
    <section class="bg-white">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 -mt-8">
        <div class="aspect-[2/1] rounded-xl overflow-hidden shadow-xl">
          <img 
            src={insight.data.image} 
            alt={insight.data.title}
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg max-w-none prose-headings:font-display prose-headings:text-charcoal-900 prose-headings:font-bold prose-a:text-crimson-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-charcoal-900 prose-p:text-slate-700 prose-li:text-slate-700">
        <Content />
      </div>

      {/* Tags */}
      {insight.data.tags && insight.data.tags.length > 0 && (
        <div class="mt-12 pt-8 border-t border-slate-200">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm text-slate-500">Topics:</span>
            {insight.data.tags.map((tag) => (
              <span class="px-3 py-1 text-sm text-charcoal-700 bg-slate-100 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}

      {/* Share */}
      <div class="mt-8 flex items-center gap-4">
        <span class="text-sm text-slate-500">Share:</span>
        <div class="flex items-center gap-2">
          <button type="button" class="p-2 text-slate-400 hover:text-charcoal-900 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </button>
          <button type="button" class="p-2 text-slate-400 hover:text-charcoal-900 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Insights -->
  {relatedInsights.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="font-display text-2xl font-bold text-charcoal-900">
            Related Insights
          </h2>
          <a href="/insights" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-1">
            View All
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          {relatedInsights.map((related) => (
            <a 
              href={`/insights/${related.slug}`}
              class="group block bg-white rounded-xl p-6 border border-slate-200 hover:shadow-lg transition-all"
            >
              {related.data.category && (
                <span class="inline-block px-3 py-1 text-xs font-medium text-crimson-600 bg-crimson-50 rounded-full mb-3">
                  {related.data.category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </span>
              )}
              <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors line-clamp-2">
                {related.data.title}
              </h3>
              <p class="mt-2 text-sm text-slate-500">
                {new Date(related.data.publishedAt).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                })}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Questions? Let's talk.
      </h2>
      <p class="mt-4 text-xl text-slate-300">
        Our experts are ready to discuss how this applies to your business.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="primary" size="lg">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
