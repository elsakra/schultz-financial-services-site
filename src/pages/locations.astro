---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const locations = await getCollection('locations');
const sortedLocations = locations.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const headquarters = sortedLocations.find(l => l.data.isHeadquarters);
const otherLocations = sortedLocations.filter(l => !l.data.isHeadquarters);

const { sections } = siteData;
---

<BaseLayout title="Locations">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-white">
          {sections.locations?.headline || "Our Locations"}
        </h1>
        {sections.locations?.description && (
          <p class="mt-6 text-xl text-slate-300 leading-relaxed">
            {sections.locations.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Headquarters -->
  {headquarters && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <span class="inline-block px-3 py-1 text-xs font-medium text-crimson-600 bg-crimson-50 rounded-full mb-4">
              Headquarters
            </span>
            <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
              {headquarters.data.city}{headquarters.data.state && `, ${headquarters.data.state}`}
            </h2>
            <p class="mt-4 text-lg text-slate-600">
              {headquarters.data.address}
            </p>
            <div class="mt-6 space-y-3">
              {headquarters.data.phone && (
                <a href={`tel:${headquarters.data.phone}`} class="flex items-center gap-3 text-slate-600 hover:text-crimson-600 transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  {headquarters.data.phone}
                </a>
              )}
              {headquarters.data.email && (
                <a href={`mailto:${headquarters.data.email}`} class="flex items-center gap-3 text-slate-600 hover:text-crimson-600 transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  {headquarters.data.email}
                </a>
              )}
            </div>
            <div class="mt-8">
              <Button href="/contact" style="primary">
                Contact This Office
              </Button>
            </div>
          </div>
          <div class="bg-slate-100 rounded-xl aspect-[4/3] flex items-center justify-center">
            <div class="text-center text-slate-400">
              <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="text-sm">Map placeholder</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Other Locations -->
  {otherLocations.length > 0 && (
    <section class="py-16 lg:py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-display text-2xl lg:text-3xl font-bold text-charcoal-900 mb-10">
          All Office Locations
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedLocations.map((location) => (
            <div class="bg-white rounded-xl p-6 border border-slate-200">
              <div class="flex items-start justify-between">
                <div>
                  <h3 class="font-display text-lg font-bold text-charcoal-900">
                    {location.data.city}{location.data.state && `, ${location.data.state}`}
                  </h3>
                  {location.data.isHeadquarters && (
                    <span class="inline-block mt-1 text-xs text-crimson-600 font-medium">
                      Headquarters
                    </span>
                  )}
                </div>
                <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>

              <p class="mt-4 text-sm text-slate-600">
                {location.data.address}
              </p>

              <div class="mt-4 space-y-2">
                {location.data.phone && (
                  <a href={`tel:${location.data.phone}`} class="block text-sm text-slate-600 hover:text-crimson-600 transition-colors">
                    {location.data.phone}
                  </a>
                )}
                {location.data.email && (
                  <a href={`mailto:${location.data.email}`} class="block text-sm text-slate-600 hover:text-crimson-600 transition-colors">
                    {location.data.email}
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to connect?
      </h2>
      <p class="mt-4 text-xl text-slate-300">
        Reach out to learn how Sterling can support your business, wherever you're located.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="primary" size="lg">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
