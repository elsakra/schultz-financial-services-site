---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

const { service } = Astro.props;
const { Content } = await service.render();

// Get other services for "Related Services" section
const allServices = await getCollection('services');
const otherServices = allServices
  .filter(s => s.slug !== service.slug)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
  .slice(0, 3);

// Get related industries
const industries = await getCollection('industries');
const relatedIndustries = service.data.industries 
  ? industries.filter(i => service.data.industries?.includes(i.slug))
  : [];
---

<BaseLayout title={service.data.title} description={service.data.shortDescription}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-slate-400 mb-8">
        <a href="/services" class="hover:text-white transition-colors">Services</a>
        <span>/</span>
        <span class="text-white">{service.data.title}</span>
      </nav>
      
      <div class="max-w-3xl">
        <h1 class="font-display text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
          {service.data.title}
        </h1>
        {service.data.shortDescription && (
          <p class="mt-6 text-xl text-slate-300 leading-relaxed">
            {service.data.shortDescription}
          </p>
        )}
        
        <div class="mt-8 flex flex-wrap gap-4">
          <Button href="/contact" style="primary" size="lg">
            Get Started
          </Button>
          <Button href="/industries" style="outline" size="lg" class="border-slate-600 text-white hover:bg-white hover:text-charcoal-900">
            View Industries
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  {service.data.features && service.data.features.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-8">
          What We Offer
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {service.data.features.map((feature) => (
            <div class="bg-white rounded-xl p-6 border border-slate-200">
              <div class="w-10 h-10 bg-crimson-50 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-5 h-5 text-crimson-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-charcoal-800 font-medium">{feature}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg max-w-none prose-headings:font-display prose-headings:text-charcoal-900 prose-headings:font-bold prose-a:text-crimson-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-charcoal-900">
        <Content />
      </div>
    </div>
  </section>

  <!-- Related Industries -->
  {relatedIndustries.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-8">
          Industries We Serve
        </h2>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedIndustries.map((industry) => (
            <a 
              href={`/industries/${industry.slug}`}
              class="group block bg-white rounded-xl p-6 border border-slate-200 hover:shadow-lg transition-all"
            >
              <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                {industry.data.title}
              </h3>
              {industry.data.shortDescription && (
                <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                  {industry.data.shortDescription}
                </p>
              )}
              <span class="mt-4 inline-flex items-center text-crimson-600 text-sm font-medium">
                Learn More
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Other Services -->
  {otherServices.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="font-display text-2xl font-bold text-charcoal-900">
            Other Services
          </h2>
          <a href="/services" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-1">
            View All
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          {otherServices.map((related) => (
            <a 
              href={`/services/${related.slug}`} 
              class="group block bg-white rounded-xl p-6 border border-slate-200 hover:shadow-lg transition-all"
            >
              <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                {related.data.title}
              </h3>
              {related.data.shortDescription && (
                <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                  {related.data.shortDescription}
                </p>
              )}
              <span class="mt-4 inline-flex items-center text-crimson-600 text-sm font-medium">
                Learn More
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to discuss {service.data.title}?
      </h2>
      <p class="mt-4 text-xl text-slate-300">
        Connect with our team to learn how we can support your business.
      </p>
      <div class="mt-10 flex flex-wrap justify-center gap-4">
        <Button href="/contact" style="primary" size="lg">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
