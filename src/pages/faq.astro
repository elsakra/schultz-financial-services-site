---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqItems = await getCollection('faq');
const sortedFaqItems = faqItems.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections, company } = siteData;
---

<BaseLayout title="FAQ">
  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-white">
          {sections.faq?.headline || "Frequently Asked Questions"}
        </h1>
        {sections.faq?.description && (
          <p class="mt-6 text-xl text-slate-300 leading-relaxed">
            {sections.faq.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      {sortedFaqItems.length > 0 ? (
        <div class="space-y-4">
          {sortedFaqItems.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details 
                class="group bg-slate-50 rounded-xl overflow-hidden border border-slate-200"
                open={index === 0}
              >
                <summary class="flex items-center justify-between p-6 cursor-pointer list-none hover:bg-slate-100 transition-colors">
                  <h3 class="font-display text-lg font-bold text-charcoal-900 pr-8">
                    {faq.data.question}
                  </h3>
                  <svg 
                    class="w-5 h-5 text-charcoal-600 flex-shrink-0 transition-transform group-open:rotate-180" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </summary>
                <div class="px-6 pb-6 prose prose-slate max-w-none">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <p class="text-slate-500">No FAQs available at this time. Please contact us with any questions.</p>
          <div class="mt-6">
            <Button href="/contact" style="primary">
              Contact Us
            </Button>
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Still Have Questions -->
  <section class="py-16 lg:py-24 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl font-bold text-charcoal-900 mb-4">
        Still Have Questions?
      </h2>
      <p class="text-slate-600 mb-8 max-w-2xl mx-auto">
        Our team is here to help. Reach out and we'll get back to you within one business day.
      </p>
      <Button href="/contact" style="primary" size="lg">
        Contact Us
      </Button>
    </div>
  </section>
</BaseLayout>
