---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const industries = await getCollection('industries');
  return industries.map((industry) => ({
    params: { slug: industry.slug },
    props: { industry },
  }));
}

const { industry } = Astro.props;
const { Content } = await industry.render();

// Get related services
const services = await getCollection('services');
const relatedServices = industry.data.services 
  ? services.filter(s => industry.data.services?.includes(s.slug))
  : services.slice(0, 3);

// Get other industries
const allIndustries = await getCollection('industries');
const otherIndustries = allIndustries
  .filter(i => i.slug !== industry.slug)
  .sort((a, b) => (a.data.order || 0) - (b.data.order || 0))
  .slice(0, 3);
---

<BaseLayout title={industry.data.title} description={industry.data.shortDescription}>
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-slate-400 mb-8">
        <a href="/industries" class="hover:text-white transition-colors">Industries</a>
        <span>/</span>
        <span class="text-white">{industry.data.title}</span>
      </nav>
      
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="font-display text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
            {industry.data.title}
          </h1>
          {industry.data.shortDescription && (
            <p class="mt-6 text-xl text-slate-300 leading-relaxed">
              {industry.data.shortDescription}
            </p>
          )}
          
          <div class="mt-8 flex flex-wrap gap-4">
            <Button href="/contact" style="primary" size="lg">
              Get Started
            </Button>
            <Button href="/services" style="outline" size="lg" class="border-slate-600 text-white hover:bg-white hover:text-charcoal-900">
              Our Services
            </Button>
          </div>
        </div>

        {industry.data.image && (
          <div class="hidden lg:block">
            <div class="aspect-[4/3] rounded-2xl overflow-hidden">
              <img 
                src={industry.data.image} 
                alt={industry.data.title}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Challenges & Solutions -->
  {(industry.data.challenges || industry.data.solutions) && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12">
          {industry.data.challenges && industry.data.challenges.length > 0 && (
            <div>
              <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-6">
                Industry Challenges
              </h2>
              <ul class="space-y-4">
                {industry.data.challenges.map((challenge) => (
                  <li class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-6 h-6 bg-crimson-100 rounded-full flex items-center justify-center mt-0.5">
                      <svg class="w-3.5 h-3.5 text-crimson-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                    </div>
                    <span class="text-slate-700">{challenge}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          {industry.data.solutions && industry.data.solutions.length > 0 && (
            <div>
              <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-6">
                Our Solutions
              </h2>
              <ul class="space-y-4">
                {industry.data.solutions.map((solution) => (
                  <li class="flex items-start gap-3">
                    <div class="flex-shrink-0 w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mt-0.5">
                      <svg class="w-3.5 h-3.5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <span class="text-slate-700">{solution}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg max-w-none prose-headings:font-display prose-headings:text-charcoal-900 prose-headings:font-bold prose-a:text-crimson-600 prose-a:no-underline hover:prose-a:underline prose-strong:text-charcoal-900">
        <Content />
      </div>
    </div>
  </section>

  <!-- Related Services -->
  {relatedServices.length > 0 && (
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="font-display text-2xl font-bold text-charcoal-900">
            Services for {industry.data.title}
          </h2>
          <a href="/services" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-1">
            View All Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          {relatedServices.map((service) => (
            <a 
              href={`/services/${service.slug}`}
              class="group block bg-white rounded-xl p-6 border border-slate-200 hover:shadow-lg transition-all"
            >
              <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                {service.data.title}
              </h3>
              {service.data.shortDescription && (
                <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                  {service.data.shortDescription}
                </p>
              )}
              <span class="mt-4 inline-flex items-center text-crimson-600 text-sm font-medium">
                Learn More
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Other Industries -->
  {otherIndustries.length > 0 && (
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-8">
          <h2 class="font-display text-2xl font-bold text-charcoal-900">
            Other Industries
          </h2>
          <a href="/industries" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-1">
            View All
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          {otherIndustries.map((other) => (
            <a 
              href={`/industries/${other.slug}`}
              class="group block bg-white rounded-xl p-6 border border-slate-200 hover:shadow-lg transition-all"
            >
              <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                {other.data.title}
              </h3>
              {other.data.shortDescription && (
                <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                  {other.data.shortDescription}
                </p>
              )}
              <span class="mt-4 inline-flex items-center text-crimson-600 text-sm font-medium">
                Learn More
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to discuss your {industry.data.title.toLowerCase()} needs?
      </h2>
      <p class="mt-4 text-xl text-slate-300">
        Connect with our industry specialists to learn how we can support your business.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="primary" size="lg">
          Contact Us
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
