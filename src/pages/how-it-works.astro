---
import BaseLayout from '@/layouts/BaseLayout.astro';
import SectionHeader from '@/components/SectionHeader.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const faqs = await getCollection('faq');
const sortedFaqs = faqs.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const { sections } = siteData;
---

<BaseLayout title="How It Works">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-sage-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-semibold text-sage-900">
          {sections.howItWorks?.headline || "How It Works"}
        </h1>
        {sections.howItWorks?.description && (
          <p class="mt-6 text-xl text-earth-600 leading-relaxed">
            {sections.howItWorks.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Steps -->
  {sections.howItWorks?.steps && (
    <section class="py-24 bg-cream-50">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative">
          <!-- Timeline line -->
          <div class="hidden md:block absolute left-8 top-0 bottom-0 w-0.5 bg-sage-200"></div>
          
          <div class="space-y-12">
            {sections.howItWorks.steps.map((step, index) => (
              <div class="relative flex gap-8">
                <!-- Step number -->
                <div class="flex-shrink-0 w-16 h-16 bg-sage-600 rounded-2xl flex items-center justify-center z-10">
                  <span class="font-display text-2xl font-bold text-cream-100">
                    {step.number}
                  </span>
                </div>
                
                <!-- Content -->
                <div class="flex-1 bg-white rounded-2xl p-8 shadow-sm">
                  <h3 class="font-display text-2xl font-semibold text-sage-900">
                    {step.title}
                  </h3>
                  <p class="mt-3 text-earth-600 leading-relaxed">
                    {step.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="mt-16 text-center">
          <Button href="/contact" style="primary" size="lg">
            Get Started Today
          </Button>
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  {sortedFaqs.length > 0 && (
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <SectionHeader 
          headline={sections.faq?.headline || "Frequently Asked Questions"} 
          description={sections.faq?.description}
        />
        
        <div class="mt-16 space-y-4">
          {sortedFaqs.map(async (faq, index) => {
            const { Content } = await faq.render();
            return (
              <details class="group bg-cream-50 rounded-2xl">
                <summary class="flex items-center justify-between cursor-pointer p-6 text-left">
                  <span class="font-display text-lg font-semibold text-sage-900 pr-4">
                    {faq.data.question}
                  </span>
                  <span class="flex-shrink-0 w-8 h-8 bg-sage-100 rounded-full flex items-center justify-center group-open:bg-sage-600 transition-colors">
                    <svg class="w-4 h-4 text-sage-600 group-open:text-white group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </span>
                </summary>
                <div class="px-6 pb-6 text-earth-600 leading-relaxed prose prose-sm">
                  <Content />
                </div>
              </details>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  <section class="py-24 bg-sage-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-semibold text-cream-100">
        Ready to take the first step?
      </h2>
      <p class="mt-4 text-xl text-cream-300">
        Schedule your discovery call today.
      </p>
      <div class="mt-10">
        <Button href="/contact" style="secondary" size="lg">
          Book Your Consultation
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
