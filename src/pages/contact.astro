---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';

const { sections, company } = siteData;
---

<BaseLayout title="Contact Us">
  <!-- Hero -->
  <section class="pt-32 pb-16 bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-white">
          {sections.contact?.headline || "Let's Talk"}
        </h1>
        {sections.contact?.description && (
          <p class="mt-6 text-xl text-slate-300 leading-relaxed">
            {sections.contact.description}
          </p>
        )}
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div class="bg-slate-50 rounded-xl p-8 lg:p-10">
          <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-6">
            Send us a message
          </h2>
          
          <form class="space-y-6" action="#" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-charcoal-700 mb-2">
                  First Name
                </label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-charcoal-700 mb-2">
                  Last Name
                </label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-charcoal-700 mb-2">
                Email Address
              </label>
              <input 
                type="email" 
                id="email" 
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors"
              />
            </div>

            <div>
              <label for="company" class="block text-sm font-medium text-charcoal-700 mb-2">
                Company
              </label>
              <input 
                type="text" 
                id="company" 
                name="company"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-charcoal-700 mb-2">
                Phone Number (optional)
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors"
              />
            </div>
            
            <div>
              <label for="interest" class="block text-sm font-medium text-charcoal-700 mb-2">
                How can we help?
              </label>
              <select 
                id="interest" 
                name="interest"
                class="w-full px-4 py-3 rounded-lg border border-slate-300 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors bg-white"
              >
                <option value="">Select an option</option>
                <option value="tax">Tax Services</option>
                <option value="audit">Audit & Assurance</option>
                <option value="advisory">Advisory Services</option>
                <option value="digital">Digital & Technology</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-charcoal-700 mb-2">
                Your Message
              </label>
              <textarea 
                id="message" 
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-lg border border-slate-300 bg-white text-charcoal-900 focus:border-crimson-500 focus:ring-2 focus:ring-crimson-200 outline-none transition-colors resize-none"
                placeholder="Tell us about your business needs..."
              ></textarea>
            </div>
            
            <Button style="primary" size="lg" class="w-full">
              Send Message
            </Button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="lg:pt-8">
          <h2 class="font-display text-2xl font-bold text-charcoal-900 mb-8">
            Other ways to reach us
          </h2>
          
          <div class="space-y-8">
            {company.email && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-crimson-50 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-crimson-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal-900">Email</h3>
                  <a href={`mailto:${company.email}`} class="text-slate-600 hover:text-crimson-600 transition-colors">
                    {company.email}
                  </a>
                </div>
              </div>
            )}
            
            {company.phone && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-crimson-50 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-crimson-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal-900">Phone</h3>
                  <a href={`tel:${company.phone}`} class="text-slate-600 hover:text-crimson-600 transition-colors">
                    {company.phone}
                  </a>
                </div>
              </div>
            )}
            
            {company.address && (
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-crimson-50 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-crimson-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal-900">Headquarters</h3>
                  <address class="text-slate-600 not-italic">
                    {typeof company.address === 'string' ? (
                      <p>{company.address}</p>
                    ) : (
                      <>
                        {company.address?.street && <p>{company.address.street}</p>}
                        {(company.address?.city || company.address?.state || company.address?.zip) && (
                          <p>
                            {company.address?.city}{company.address?.city && company.address?.state ? ', ' : ''}
                            {company.address?.state} {company.address?.zip}
                          </p>
                        )}
                      </>
                    )}
                  </address>
                </div>
              </div>
            )}
          </div>
          
          <!-- Additional Info Box -->
          <div class="mt-12 bg-slate-50 rounded-xl p-8">
            <h3 class="font-display text-xl font-bold text-charcoal-900 mb-3">
              What to expect
            </h3>
            <p class="text-slate-600 leading-relaxed">
              Once you reach out, a member of our team will respond within one business day to schedule an introductory call. We'll learn about your business and discuss how Sterling can help.
            </p>
          </div>

          <div class="mt-8">
            <a 
              href="/locations" 
              class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-2"
            >
              Find an office near you
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
