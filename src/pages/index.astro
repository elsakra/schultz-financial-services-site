---
import BaseLayout from '@/layouts/BaseLayout.astro';
import HeroCarousel from '@/components/HeroCarousel.astro';
import Button from '@/components/Button.astro';
import siteData from '@/data/site.json';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const industries = await getCollection('industries');
const insights = await getCollection('insights');
const locations = await getCollection('locations');

const { sections, socialProof } = siteData;
const sortedServices = services.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));
const sortedIndustries = industries.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 6);
const featuredInsights = insights.filter(i => i.data.featured).sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
).slice(0, 3);
const sortedLocations = locations.sort((a, b) => (a.data.order || 0) - (b.data.order || 0)).slice(0, 4);

// Get service icon SVG
const getServiceIcon = (iconName: string) => {
  const icons: Record<string, string> = {
    'chart-bar': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />',
    'calculator': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.75 15.75V18m-7.5-6.75h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V13.5zm0 2.25h.008v.008H8.25v-.008zm0 2.25h.008v.008H8.25V18zm2.498-6.75h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V13.5zm0 2.25h.007v.008h-.007v-.008zm0 2.25h.007v.008h-.007V18zm2.504-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zm0 2.25h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V18zm2.498-6.75h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V13.5zM8.25 6h7.5v2.25h-7.5V6zM12 2.25c-1.892 0-3.758.11-5.593.322C5.307 2.7 4.5 3.65 4.5 4.757V19.5a2.25 2.25 0 002.25 2.25h10.5a2.25 2.25 0 002.25-2.25V4.757c0-1.108-.806-2.057-1.907-2.185A48.507 48.507 0 0012 2.25z" />',
    'shield-check': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />',
    'cpu': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25zm.75-12h9v9h-9v-9z" />',
  };
  return icons[iconName] || icons['chart-bar'];
};
---

<BaseLayout>
  <!-- Hero Carousel -->
  <HeroCarousel />

  <!-- Curated Insights Section -->
  {featuredInsights.length > 0 && (
    <section class="py-16 lg:py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-6 mb-10">
          <div>
            <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
              {sections.insights?.headline || "Curated insights"}
            </h2>
            {sections.insights?.description && (
              <p class="mt-3 text-lg text-slate-600 max-w-2xl">
                {sections.insights.description}
              </p>
            )}
          </div>
          <a href="/insights" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-2 shrink-0">
            Learn More
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        
        <!-- Category Tabs -->
        {sections.insights?.categories && (
          <div class="flex flex-wrap gap-2 mb-10">
            {sections.insights.categories.map((cat, index) => (
              <button
                type="button"
                class:list={[
                  "px-4 py-2 rounded-full text-sm font-medium transition-colors",
                  index === 0 
                    ? "bg-crimson-600 text-white" 
                    : "bg-white text-charcoal-700 hover:bg-slate-100 border border-slate-200"
                ]}
              >
                {cat.label}
              </button>
            ))}
          </div>
        )}

        <!-- Insights Cards -->
        <div class="space-y-6">
          {featuredInsights.map((insight) => (
            <a 
              href={`/insights/${insight.slug}`}
              class="block bg-white rounded-lg p-6 hover:shadow-lg transition-shadow border border-slate-200"
            >
              <div class="flex items-start justify-between gap-4">
                <div>
                  <span class="inline-block px-3 py-1 text-xs font-medium text-crimson-600 bg-crimson-50 rounded-full mb-3">
                    {insight.data.category?.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) || 'Insight'}
                  </span>
                  <h3 class="font-display text-xl font-bold text-charcoal-900 group-hover:text-crimson-600">
                    {insight.data.title}
                  </h3>
                  <p class="mt-2 text-slate-600 line-clamp-2">
                    {insight.data.excerpt}
              </p>
            </div>
                <span class="text-crimson-600 shrink-0">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Services Section -->
  {sortedServices.length > 0 && (
    <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
            {sections.services?.headline || "Our services"}
          </h2>
          {sections.services?.description && (
            <p class="mt-4 text-lg text-slate-600 max-w-3xl mx-auto">
              {sections.services.description}
            </p>
          )}
        </div>

        <!-- Services Grid - Offset Layout -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {sortedServices.map((service, index) => (
            <a 
              href={`/services/${service.slug}`}
              class:list={[
                "group relative bg-white rounded-2xl p-8 border border-slate-200 hover:border-crimson-200 hover:shadow-xl transition-all card-hover",
                index % 2 === 1 ? "lg:mt-12" : ""
              ]}
            >
              {/* Icon */}
              <div class="w-14 h-14 bg-slate-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-crimson-50 transition-colors">
                <svg class="w-7 h-7 text-charcoal-700 group-hover:text-crimson-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={getServiceIcon(service.data.icon || 'chart-bar')} />
              </div>
              
              <h3 class="font-display text-xl font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                {service.data.title}
              </h3>
              
              {service.data.shortDescription && (
                <p class="mt-3 text-slate-600 text-sm leading-relaxed">
                  {service.data.shortDescription}
                </p>
              )}
              
              <span class="mt-6 inline-flex items-center text-crimson-600 text-sm font-semibold">
                Read More
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </a>
          ))}
        </div>
        
        <div class="mt-12 text-center">
          <a href="/services" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors inline-flex items-center gap-2">
            See All Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Industry Insights Section -->
  {sortedIndustries.length > 0 && (
    <section class="py-16 lg:py-24 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-6 mb-10">
          <div>
            <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
              {sections.industries?.headline || "Industry insights to move your business forward"}
            </h2>
            {sections.industries?.description && (
              <p class="mt-3 text-lg text-slate-600 max-w-2xl">
                {sections.industries.description}
              </p>
            )}
          </div>
          <a href="/industries" class="text-crimson-600 font-semibold hover:text-crimson-700 transition-colors flex items-center gap-2 shrink-0">
            See All Industries
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Industry Cards -->
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedIndustries.map((industry) => (
            <a 
              href={`/industries/${industry.slug}`}
              class="group relative bg-white rounded-xl overflow-hidden border border-slate-200 hover:shadow-lg transition-all"
            >
              {industry.data.image ? (
                <div class="aspect-[16/9] overflow-hidden">
                  <img 
                    src={industry.data.image} 
                    alt={industry.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
              ) : (
                <div class="aspect-[16/9] bg-gradient-to-br from-charcoal-800 to-navy-900"></div>
              )}
              <div class="p-6">
                <h3 class="font-display text-lg font-bold text-charcoal-900 group-hover:text-crimson-600 transition-colors">
                  {industry.data.title}
                </h3>
                {industry.data.shortDescription && (
                  <p class="mt-2 text-sm text-slate-600 line-clamp-2">
                    {industry.data.shortDescription}
                  </p>
                )}
                <span class="mt-4 inline-flex items-center text-crimson-600 text-sm font-medium">
                  Read More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Newsletter Section -->
  <section class="py-12 bg-white border-y border-slate-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div>
          <h2 class="font-display text-2xl font-bold text-charcoal-900">
            {sections.newsletter?.headline || "Stay current with our latest insights"}
          </h2>
          {sections.newsletter?.description && (
            <p class="mt-1 text-slate-600">
              {sections.newsletter.description}
            </p>
          )}
        </div>
        <div class="flex-shrink-0">
          <button 
            type="button"
            class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-charcoal-900 text-charcoal-900 font-semibold rounded hover:bg-charcoal-900 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {sections.newsletter?.buttonLabel || "Subscribe"}
          </button>
        </div>
        </div>
      </div>
    </section>

  <!-- Purpose Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
          {sections.purpose?.headline || "Our purpose is to help people thrive"}
        </h2>
        {sections.purpose?.content && (
          <p class="mt-6 text-lg text-slate-600 leading-relaxed">
            {sections.purpose.content}
          </p>
        )}
        {sections.purpose?.cta && (
          <div class="mt-8">
            <a 
              href={sections.purpose.cta.href}
              class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-charcoal-900 text-charcoal-900 font-semibold rounded hover:bg-charcoal-900 hover:text-white transition-colors"
            >
              {sections.purpose.cta.label}
            </a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Careers Section -->
  <section class="py-16 lg:py-24 bg-charcoal-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="font-display text-3xl lg:text-4xl font-bold">
            {sections.careers?.headline || "Your career starts here"}
          </h2>
          {sections.careers?.description && (
            <p class="mt-4 text-lg text-slate-300 leading-relaxed">
              {sections.careers.description}
            </p>
          )}
          {sections.careers?.cta && (
            <div class="mt-8">
              <a 
                href={sections.careers.cta.href}
                class="inline-flex items-center gap-2 px-6 py-3 bg-crimson-600 text-white font-semibold rounded hover:bg-crimson-700 transition-colors"
              >
                {sections.careers.cta.label}
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          )}
        </div>

        {/* Awards */}
        {sections.careers?.awards && (
          <div class="grid grid-cols-3 gap-6">
            {sections.careers.awards.map((award) => (
              <div class="text-center p-6 bg-charcoal-800/50 rounded-xl">
                <div class="w-12 h-12 mx-auto mb-3 bg-slate-700 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.5 18.75h-9m9 0a3 3 0 013 3h-15a3 3 0 013-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 01-.982-3.172M9.497 14.25a7.454 7.454 0 00.981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 007.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 002.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 012.916.52 6.003 6.003 0 01-5.395 4.972m0 0a6.726 6.726 0 01-2.749 1.35m0 0a6.772 6.772 0 01-3.044 0" />
                  </svg>
                </div>
                <p class="font-semibold text-white">{award.title}</p>
                <p class="text-sm text-slate-400 mt-1">{award.subtitle}</p>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Locations Section -->
  {sortedLocations.length > 0 && (
    <section class="py-16 lg:py-20 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="font-display text-3xl lg:text-4xl font-bold text-charcoal-900">
          {sections.locations?.headline || "Find a Sterling Office Near You"}
        </h2>
        {sections.locations?.description && (
          <p class="mt-3 text-lg text-slate-600 max-w-2xl mx-auto">
            {sections.locations.description}
          </p>
        )}

        <div class="mt-10 grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {sortedLocations.map((location) => (
            <div class="bg-white rounded-lg p-6 text-left border border-slate-200">
              <h3 class="font-semibold text-charcoal-900">
                {location.data.city}{location.data.state && `, ${location.data.state}`}
              </h3>
              {location.data.isHeadquarters && (
                <span class="inline-block mt-1 text-xs text-crimson-600 font-medium">Headquarters</span>
              )}
              {location.data.phone && (
                <p class="mt-3 text-sm text-slate-600">{location.data.phone}</p>
              )}
            </div>
          ))}
        </div>
        
        {sections.locations?.cta && (
          <div class="mt-10">
            <a 
              href={sections.locations.cta.href}
              class="inline-flex items-center gap-2 px-6 py-3 bg-white border-2 border-charcoal-900 text-charcoal-900 font-semibold rounded hover:bg-charcoal-900 hover:text-white transition-colors"
            >
              {sections.locations.cta.label}
            </a>
        </div>
        )}
      </div>
    </section>
  )}
</BaseLayout>
